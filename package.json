{
  "name": "css-to-css-module-transform",
  "displayName": "CSS to CSS Module Transformer",
  "description": "Transforms jsx/tsx CSS classes into CSS Modules syntax.",
  "publisher": "Amit Singh",
  "version": "0.0.8",
  "icon": "assets/cssModule.png",
  "engines": {
    "vscode": "^1.68.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:css-to-css-module-transform.transformClasses",
    "*"
],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "css-to-css-module-transform.transformClasses",
        "title": "Transforms jsx/tsx CSS classes into CSS Modules syntax."
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.68.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "ts-loader": "^9.4.3",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1",
    "@vscode/test-electron": "^2.3.2"
  }
}
